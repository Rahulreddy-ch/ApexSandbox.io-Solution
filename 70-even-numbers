public List<Integer> evenNumbers(Integer n) {
    //code here
    List<Integer> evenNumbers = new List<Integer>();
    Integer prevNumber = 0;
   /* while (n > 0){
        evenNumbers.add(prevNumber+2);
        prevNumber += 2;
        n--;
    }*/
    for (Integer i = 0; i<n; i++){
         prevNumber += 2;
         evenNumbers.add(prevNumber);
    }
    return evenNumbers;
}