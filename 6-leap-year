public Boolean isLeapYear(Integer year) {
    //code here
    if (isDivisibleBy4(year)){
        if (isDivisibleBy100(year)) {
           if (isDivisibleBy400(year) ){
               return true;
           } else {
               return false;
           }
        } else{
            return true;
        }
    } 
    return false;
}

public Boolean isDivisibleBy4(Integer number){
 return (Math.mod(number, 4) == 0);
}

public Boolean isDivisibleBy100(Integer number){
    return (Math.mod(number, 100) == 0);
}

public Boolean isDivisibleBy400(Integer number){
    return (Math.mod(number, 400) == 0);
}
