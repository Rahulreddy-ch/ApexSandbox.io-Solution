public Integer nextPrime(Integer num) {
    //code here
    for (integer i = num + 1; i > num ; i++){
        if (isPrime(i)){
            return i;
        }
    }
}

public Boolean isPrime(Integer num){
    Boolean isPrime = false;
    for (Integer i = 2; i < num ; i++){
        if(Math.mod(num, i) != 0){
            isPrime = true;
        }
    }
    return isPrime;

}